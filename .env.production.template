# ============================================
# PRODUCTION ENVIRONMENT TEMPLATE
# ============================================
# For 20-user deployment
# Copy to .env.production and fill in your values
# ============================================

# Core Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT_REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT_MS=120000

# Google Calendar Integration
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_TIMEZONE=America/Chicago

# Email Service (Resend)
FROM_EMAIL=noreply@your-domain.com
RESEND_API_KEY2=re_your_resend_api_key_here

# Redis/Upstash for Rate Limiting
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Performance Settings (20 users)
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_AI_REQUESTS_PER_MINUTE=20
MAX_UPLOAD_SIZE_MB=50
SESSION_TIMEOUT_HOURS=24

# Security
CORS_ALLOWED_ORIGINS=https://your-domain.com
SECURE_COOKIES=true
CSRF_SECRET=generate_random_32_char_string_here

# Optional Analytics (if needed later)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_token_here